<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_span="4"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/btnC"
                android:onClick="clear"
                android:text="C" />

            <Button
                android:id="@+id/btnDivide"

                android:onClick="numberInput"
                android:text="/" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnNumber7"
                android:onClick="numberInput"
                android:text="7" />

            <Button
                android:id="@+id/btnNumber8"
                android:onClick="numberInput"
                android:text="8" />

            <Button
                android:id="@+id/btnNumber9"
                android:onClick="numberInput"
                android:text="9" />

            <Button
                android:id="@+id/btnMultiply"
                android:onClick="numberInput"
                android:text="*" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnNumber4"
                android:onClick="numberInput"
                android:text="4" />

            <Button
                android:id="@+id/btnNumber5"
                android:onClick="numberInput"
                android:text="5" />

            <Button
                android:id="@+id/btnNumber6"
                android:onClick="numberInput"
                android:text="6" />

            <Button
                android:id="@+id/btnSubtract"
                android:onClick="numberInput"
                android:text="-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnNumber1"
                android:onClick="numberInput"
                android:text="1" />

            <Button
                android:id="@+id/btnNumber2"
                android:onClick="numberInput"
                android:text="2" />

            <Button
                android:id="@+id/btnNumber3"
                android:onClick="numberInput"
                android:text="3" />

            <Button
                android:id="@+id/btnAdd"
                android:onClick="numberInput"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnNumber0"
                android:onClick="numberInput"
                android:text="0" />

            <Button
                android:id="@+id/btnDot"
                android:text="." />

            <Button
                android:id="@+id/btnPlusMinus"
                android:text="Â±" />

            <Button
                android:id="@+id/btnResult"
                android:onClick="results"
                android:text="=" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>